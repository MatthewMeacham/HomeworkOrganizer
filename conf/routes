# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET    /                                                         controllers.Application.index()
GET    /login                                                    controllers.Application.login()
GET    /logout                                                   controllers.Application.logout()
POST   /authenticate/                                            controllers.Application.authenticate()
GET    /faq                                                      controllers.Application.FAQ()
GET    /contact                                                  controllers.Application.contactUsPage()
POST   /contact                                                  controllers.Application.contactUs()
GET    /refresh                                                  controllers.Application.refresh(studentID: Long)

# Assignments
GET    /assn/edit/:assnID/:studentID/                            controllers.Assignments.editPageAssignment(assnID: String, studentID: String)
POST   /assn/edit/                                               controllers.Assignments.editAssignment(assnID: String, studentID: String)
GET    /teacher/assn/edit/:assnID/:teacherID/                    controllers.Assignments.editPageAssignmentForTeacher(assnID: String, teacherID: String)
POST   /teacher/assn/edit/                                       controllers.Assignments.editAssignmentForTeacher(assnID: String, teacherID: String)
POST   /profileAssnChanged/                                      controllers.Assignments.newAssignment(studentID: String)
POST   /profileAssnChangedTeacher/                               controllers.Assignments.newAssignmentForTeacher(teacherID: String)
POST   /assn/delete/                                             controllers.Assignments.deleteAssignment(assnID: String, studentID: String)
POST   /teacher/assn/delete/                                     controllers.Assignments.deleteAssignmentForTeacher(assnID: String, teacherID: String)
POST   /finishedAssn/                                            controllers.Assignments.finishedAssignment(assnID: String, studentID: String)



# Classes
GET    /schoolClass/editPage/:schoolClassID/:studentID           controllers.Classes.schoolClassEditPage(schoolClassID: String, studentID: String)
POST   /schoolClass/edit/                                        controllers.Classes.editSchoolClass(schoolClassID: String, studentID: String)
GET    /teacher/schoolClass/editPage/:schoolClassID/:teacherID   controllers.Classes.schoolClassEditPageForTeacher(schoolClassID: String, teacherID: String)
POST   /teacher/schoolClass/edit/                                controllers.Classes.editSchoolClassForTeacher(schoolClassID: String, teacherID: String)
POST   /profileClassChanged/                                     controllers.Classes.newSchoolClass(studentID: String)
POST   /newSchoolClass/                                          controllers.Classes.newSchoolClassForTeacher(teacherID: String)
POST   /newSchoolClassFromTeacher/                               controllers.Classes.newSchoolClassFromTeacher(studentID: String)
POST   /schoolClass/delete/                                      controllers.Classes.deleteSchoolClass(schoolClassID: String, studentID: String)
POST   /teacher/schoolClass/delete/                              controllers.Classes.deleteSchoolClassForTeacher(schoolClassID: String, teacherID: String)

# Parents
GET    /parent/profile                                           controllers.Parents.parentProfileLogin(parentID: String)
POST   /parent/settings/edit                                     controllers.Parents.changeParentAccountSettings(parentID: String, studentID: String)
POST   /parent/addchild                                          controllers.Parents.addChild(parentID: String)
GET    /parent/tochild                                           controllers.Parents.redirectToStudent(studentID: Long, parentID: String)

# Signups
GET    /signup                                                   controllers.Signups.signup()
GET    /signup/student                                           controllers.Signups.studentSignup()
POST   /signup/student                                           controllers.Signups.newStudent()
GET    /signup/parent                                            controllers.Signups.parentSignup()
POST   /signup/parent                                            controllers.Signups.newParent()
GET    /signup/teacher                                           controllers.Signups.teacherSignup()
POST   /signup/teacher                                           controllers.Signups.newTeacher()

# Students
GET    /student/profile                                          controllers.Students.profileLogin(studentID: String)
POST   /student/settings/edit                                    controllers.Students.changeAccountSettings(studentID: String)

# Teachers
GET    /teacher/profile                                          controllers.Teachers.teacherProfileLogin(teacherID: Long)
POST   /teacher/settings/edit                                    controllers.Teachers.changeTeacherAccountSettings(teacherID: String)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                                             controllers.Assets.versioned(path="/public", file: Asset)
