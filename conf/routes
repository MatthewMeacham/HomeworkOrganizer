# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          			controllers.Application.index()
GET		/profile/							controllers.Application.profileLogin(studentID: String)
GET		/parentprofile/						controllers.Application.parentProfileLogin(parentEmail: String)
GET		/teacherprofile/					controllers.Application.teacherProfileLogin(teacherID: Long)
GET		/signup/							controllers.Application.signup()
GET		/studentsignup/						controllers.Application.studentSignup()
GET		/parentsignup/						controllers.Application.parentSignup()
GET		/teachersignup/						controllers.Application.teacherSignup()
GET     /login/          					controllers.Application.login()
GET     /logout/                    		controllers.Application.logout()
GET		/assignment/editPage/:assignmentID/:studentID/				controllers.Application.editPageAssignment(assignmentID: String, studentID: String)
GET		/teacher/assignment/editPage/:assignmentID/:teacherID/		controllers.Application.editPageAssignmentForTeacher(assignmentID: String, teacherID: String)
GET		/redirectToProfile/					controllers.Application.redirectToStudent(studentID: Long, parentID: String)
GET		/FAQ/								controllers.Application.FAQ()
GET 	/schoolClass/editPage/:schoolClassID/:studentID				controllers.Application.schoolClassEditPage(schoolClassID: String, studentID: String)
GET		/teacher/schoolClass/editPage/:schoolClassID/:teacherID		controllers.Application.schoolClassEditPageForTeacher(schoolClassID: String, teacherID: String)
GET		/contactUs/							controllers.Application.contactUsPage()
POST	/submitContactForm/					controllers.Application.contactUs()
POST	/newStudent/						controllers.Application.newStudent()
POST	/addChild/							controllers.Application.addChild()
POST	/newParent/							controllers.Application.newParent()
POST	/newTeacher/						controllers.Application.newTeacher()
POST	/authenticate/						controllers.Application.authenticate()
POST	/profileAssignmentChanged/			controllers.Application.newAssignment(studentID: String)
POST	/profileAssignmentChangedTeacher/	controllers.Application.newAssignmentForTeacher(teacherID: String)
POST	/profileClassChanged/				controllers.Application.newSchoolClass(studentID: String)
POST	/newSchoolClass/					controllers.Application.newSchoolClassForTeacher(teacherID: String)
POST	/newSchoolClassFromTeacher/			controllers.Application.newSchoolClassFromTeacher(studentID: String)
POST	/assignment/delete/					controllers.Application.deleteAssignment(assignmentID: String, studentID: String)
POST	/teacher/assignment/delete/			controllers.Application.deleteAssignmentForTeacher(assignmentID: String, teacherID: String)
POST	/finishedAssignment/				controllers.Application.finishedAssignment(assignmentID: String, studentID: String)
POST	/assignment/edit/					controllers.Application.editAssignment(assignmentID: String, studentID: String)
POST	/teacher/assignment/edit/			controllers.Application.editAssignmentForTeacher(assignmentID: String, teacherID: String)
POST	/schoolClass/edit/					controllers.Application.editSchoolClass(schoolClassID: String, studentID: String)
POST	/teacher/schoolClass/edit/			controllers.Application.editSchoolClassForTeacher(schoolClassID: String, teacherID: String)
POST	/profileSettingsChanged/			controllers.Application.changeAccountSettings(studentID: String)
POST	/parentProfileSettingsChanged/		controllers.Application.changeParentAccountSettings(parentID: String, studentID: String)
POST	/teacher/accountSettings/changed/	controllers.Application.changeTeacherAccountSettings(teacherID: String)
POST	/schoolClass/delete/				controllers.Application.deleteSchoolClass(schoolClassID: String, studentID: String)
POST	/teacher/schoolClass/delete/		controllers.Application.deleteSchoolClassForTeacher(schoolClassID: String, teacherID: String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
