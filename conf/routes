# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          			controllers.Application.index()
GET		/indexIE							controllers.Application.indexForIE()
GET		/profile							controllers.Application.profileLogin()
GET		/signup								controllers.Application.signup()
GET     /login          					controllers.Application.login()
GET     /logout                    			controllers.Application.logout()
GET 	/students							controllers.Application.students()
GET     /blog          			  			controllers.Application.blog()
GET		/blogIE								controllers.Application.blogForIE()
GET 	/homework/:id/editPage				controllers.Application.editPageHomework(id: String)
GET 	/test/:id/editPage					controllers.Application.editPageTest(id: String)
GET 	/project/:id/editPage				controllers.Application.editPageProject(id: String)
POST	/newStudent							controllers.Application.newStudent()
POST	/authenticate						controllers.Application.authenticate()
POST	/profileHomeworkChanged				controllers.Application.newHomework()
POST	/profileClassChanged				controllers.Application.newSchoolClass()
POST	/profileTestChanged					controllers.Application.newTest()
POST	/profileProjectChanged				controllers.Application.newProject()
POST 	/homework/:id/delete				controllers.Application.deleteHomework(id: String)
POST 	/test/:id/delete					controllers.Application.deleteTest(id: String)
POST 	/project/:id/delete					controllers.Application.deleteProject(id: String)
POST	/overview/:id/delete				controllers.Application.deleteOverviewObject(id: String, spanner: String)
POST	/passed/:id/delete					controllers.Application.deletePassedObject(id: String, spanner: String)
POST	/homework/:id/edit					controllers.Application.editHomework(id: String)
POST	/test/:id/edit						controllers.Application.editTest(id: String)
POST	/project/:id/edit					controllers.Application.editProject(id: String)
POST	/overviewObject/:spanner/:id/edit	controllers.Application.editOverviewObject(id: String, spanner: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
